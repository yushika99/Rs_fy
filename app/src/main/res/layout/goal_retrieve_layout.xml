<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="10dp"
    android:layout_margin="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--            check-->
        <LinearLayout
            android:id="@+id/retrivegoallinerlayout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/retrivegoalitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="   Goal"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/retrivegoalamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text=" Rs. 0"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/retrivegoalnote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text=" Note"
                android:textStyle="bold"
                android:textColor="#333"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/retrivegoaldate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:text=" Date"
                android:textColor="#333"
                android:textSize="16sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/retrivegoalImageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/retrivegoallinerlayout"
            android:layout_toRightOf="@+id/retrivegoallinerlayout"
            android:src="@drawable/incomesalary" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>