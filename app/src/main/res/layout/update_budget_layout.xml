<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="80dp">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/update_this_item16uplay"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#333"
        android:shadowColor="#009688"
        android:shadowDx="35"
        android:shadowDy="67"
        android:shadowRadius="180"
        />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/itemname32uplay"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#333"/>

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/enter_amount43uplay"
        android:textColorHint="#D6CCCC"
        android:textStyle="bold"
        android:textColor="#333"
        android:textSize="20sp"
        android:inputType="number"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/enter_note56uplay"
        android:textColorHint="#D6CCCC"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#333"
        android:inputType="textCapSentences"
        android:importantForAutofill="no" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/delBut"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:text="@string/delete87uplay"
                android:textSize="12sp"
                android:textColor="#333"
                android:textStyle="bold"
                android:background="@drawable/button_cancel_form"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center_horizontal">

            <Button

                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_save_form"
                android:gravity="center_horizontal"
                android:text="@string/update113uplay"
                android:textAllCaps="false"
                android:textColor="#F6F6F6"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>