<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChooseExpensesAnlyticsActivity"
    android:background="@drawable/expensesdis3">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/black"
        android:elevation="4dp"
        android:maxWidth="1dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/todayAnalyticscardView"
        android:layout_width="180dp"
        android:layout_height="180dp"

        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_horizontal|center_vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/todayAnalyticsImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/iconstodayexanalyze"
                android:contentDescription="@string/todayanlytivpic" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today_expense_anlytics_text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:shadowColor="#8BC34A"
                android:shadowDx="5"
                android:shadowDy="7"
                android:shadowRadius="80"
                android:gravity="center_horizontal"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/weekAnalyticscardView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="#FFF"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_horizontal|center_vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/weekAnalyticsImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/iconsweekexanalyze"
                android:contentDescription="@string/weekanlyticspic" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/week_expense_anlytics_txt"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:shadowColor="#8BC34A"
                android:shadowDx="5"
                android:shadowDy="7"
                android:shadowRadius="80"
                android:gravity="center_horizontal"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/monthAnalyticscardView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="#FFF"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_horizontal|center_vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/monthAnalyticsImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/iconmonthexanlytics"
                android:contentDescription="@string/anlyticscrdpic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/month_expense_anlytics"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:shadowColor="#8BC34A"
                android:shadowDx="5"
                android:shadowDy="7"
                android:shadowRadius="80"
                android:gravity="center_horizontal"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>