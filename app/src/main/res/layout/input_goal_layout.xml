<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:elevation="10dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">



            <TextView
                android:id="@+id/goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" SET AN INCOME GOAL"
                android:textColor="#333"
                android:textStyle="bold"
                android:textSize="38dp" />


            <TextView
                android:id="@+id/choosegoal"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text=" Choose Category"
                android:layout_marginTop="50dp"
                android:textColor="#333"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/goalspinner"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/goalspinner"
                android:entries="@array/goal"
                android:gravity="center">

            </Spinner>

            <EditText
                android:id="@+id/goalamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Enter Amount:"
                android:inputType="number"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColorHint="#000"/>

            <EditText

                android:id="@+id/goalnote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Enter Note:"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColorHint="#000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="100dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <Button
                    android:id="@+id/goalcancel"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textAllCaps="false"
                    android:text="  Cancle"
                    android:textSize="20dp"
                    android:textColor="#F8F7F7"
                    android:textStyle="bold"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/incomesavebtn"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/goalsave"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textAllCaps="false"
                    android:text="Save"
                    android:textSize="20dp"
                    android:gravity="center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_margin="2dp"
                    android:background="@drawable/incomesavebtn"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>