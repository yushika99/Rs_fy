<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:elevation="10dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">



            <TextView
                android:id="@+id/SET_AN_INCOME_GOAL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/set_an_income_goal_title"
                android:textColor="#333"
                android:textStyle="bold"
                android:textSize="38sp" />


            <TextView
                android:id="@+id/inputchoosegoal"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="@string/choose_category_input_goal_layout"
                android:layout_marginTop="50dp"
                android:textColor="#333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/itemspinner"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/goalspinner"
                android:entries="@array/goal"
                android:gravity="center">

            </Spinner>

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="@string/enter_amount_input_goal_layout"
                android:inputType="number"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColorHint="#000"/>

            <EditText

                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_note_input_goal_layout"
                android:inputType="text"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColorHint="#000"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="100dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <Button
                    android:id="@+id/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textAllCaps="false"
                    android:text="@string/cancle_input_goal_layout"
                    android:textSize="20sp"
                    android:textColor="#F8F7F7"
                    android:textStyle="bold"
                    android:layout_margin="2dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/incomesavebtn"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textAllCaps="false"
                    android:text="@string/save_input_goal_layout"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_margin="2dp"
                    android:background="@drawable/incomesavebtn"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>